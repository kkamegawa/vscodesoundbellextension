{
  "name": "copilot-sound-notifier",
  "displayName": "Copilot Sound Notifier",
  "description": "Play sounds when GitHub Copilot agent completes tasks",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/copilot-sound-notifier"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "copilot",
    "sound",
    "notification",
    "agent",
    "completion"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copilotSoundNotifier.playSound",
        "title": "Play Completion Sound",
        "category": "Copilot Sound Notifier"
      },
      {
        "command": "copilotSoundNotifier.testSound",
        "title": "Test Sound",
        "category": "Copilot Sound Notifier"
      }
    ],
    "configuration": {
      "title": "Copilot Sound Notifier",
      "properties": {
        "copilotSoundNotifier.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable sound notifications when Copilot agent completes tasks"
        },
        "copilotSoundNotifier.soundFiles": {
          "type": "object",
          "default": {
            "win32": "",
            "darwin": "",
            "linux": ""
          },
          "description": "Custom sound files for each platform (mp4, wav, wma, webm). Leave empty to use system sounds.",
          "properties": {
            "win32": {
              "type": "string",
              "description": "Sound file path for Windows"
            },
            "darwin": {
              "type": "string", 
              "description": "Sound file path for macOS"
            },
            "linux": {
              "type": "string",
              "description": "Sound file path for Linux"
            }
          }
        },
        "copilotSoundNotifier.soundCommands": {
          "type": "object",
          "default": {
            "win32": "",
            "darwin": "",
            "linux": ""
          },
          "description": "Custom sound commands for each platform. Leave empty to use VS Code default.",
          "properties": {
            "win32": {
              "type": "string",
              "description": "Sound command for Windows (e.g., 'powershell -c (New-Object Media.SoundPlayer \"{file}\").PlaySync()')"
            },
            "darwin": {
              "type": "string",
              "description": "Sound command for macOS (e.g., 'afplay \"{file}\"')"
            },
            "linux": {
              "type": "string",
              "description": "Sound command for Linux (e.g., 'paplay \"{file}\"')"
            }
          }
        },
        "copilotSoundNotifier.volume": {
          "type": "number",
          "default": 0.5,
          "minimum": 0,
          "maximum": 1,
          "description": "Sound volume (0.0 to 1.0)"
        },
        "copilotSoundNotifier.showNotification": {
          "type": "boolean",
          "default": false,
          "description": "Show notification message when Copilot task completes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "@types/mocha": "^10.0.1",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0"
  }
}
